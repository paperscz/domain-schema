{
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "lerna run -- build",
    "clean": "lerna run -- clean",
    "test": "lerna run -- test",
    "lint": "lerna run -- lint",
    "watch": "lerna run --parallel -- watch",
    "predeploy": "yarn build && yarn test",
    "deploy": "lerna publish -m \"chore: Publish\" --independent",
    "precommit": "lint-staged"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^0.14.3",
    "lerna": "^2.5.1",
    "lint-staged": "^4.1.3",
    "prettier": "^1.6.1",
    "tslint": "^5.2.0",
    "tslint-config-prettier": "^1.5.0",
    "tslint-plugin-prettier": "^1.3.0"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ],
    "*.{json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "parser": "babylon"
  }
}
