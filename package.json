{
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "test": "lerna run test",
    "lint": "lerna run -lint",
    "watch": "lerna run --parallel watch",
    "predeploy": "yarn build && yarn test",
    "deploy": "lerna publish -m \"chore: Publish\" --independent",
    "precommit": "lint-staged"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "@types/node": "^7.0.18",
    "jest": "^24.7.1",
    "ts-jest": "^24.0.2",
    "husky": "^2.2.0",
    "lerna": "^3.13.4",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.5"
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "git add"
    ],
    "*.{json}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "parser": "babel"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testEnvironment": "node"
  }
}
